<Window x:Class="Queens_Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Queens_Gallery"
        mc:Ignorable="d"
        Title="The Queen's Gallery" Height="650" Width="1100">
    <!--main body-->
    <Grid Background="BurlyWood">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock Text="Welcome to The Queen's Gallery" FontFamily="Bookman Old Style" FontSize="24" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="10"/>
            <TextBlock Text="A short look at some influencial women throughout history" FontSize="18" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>

        <!--Carousel Grid-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Arrow Button -->
            <Button Content="◀"
                    Grid.Column="0"
                    FontSize="24"
                    Padding="10"
                    VerticalAlignment="Center"
                    Click="Previous_Click"/>

            <!-- Carousel -->
            <ListBox x:Name="Carousel"
                     Grid.Column="1"
                     ItemsSource="{Binding VisiblePortraits}"
                     AlternationCount="7"                     
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <!--Styling my Carousel-->
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- Far Left -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Opacity" Value="0.4"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.6" ScaleY="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Middle Left -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Center -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="2">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Middle Right -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="3">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Far Right -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="4">
                                <Setter Property="Opacity" Value="0.4"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.6" ScaleY="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>


                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Padding="0"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="PortraitButton_Click">
                            <Border Width="190" Height="240" Background="AntiqueWhite" CornerRadius="6">
                                <StackPanel Orientation="Vertical">
                                    <Image Source="{Binding ImagePath}"
                                           Width="190"
                                           Height="190"
                                           Margin="5"
                                           Stretch="UniformToFill"
                                           ClipToBounds="True"/>
                                    <TextBlock Text="{Binding Title}"
                                               FontFamily="Bookman Old Style"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Right Arrow Button -->
            <Button Content="▶"
                    Grid.Column="2"
                    FontSize="24"
                    Padding="10"
                    VerticalAlignment="Center"
                    Click="Next_Click"/>
        </Grid>
        <!--End of Carousel-->
    </Grid> 
    <!--End of main-->
</Window>
