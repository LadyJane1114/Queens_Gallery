<Window x:Class="Queens_Gallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Queens_Gallery"
        mc:Ignorable="d"
        Title="The Queen's Gallery" Width="1500" Height="600">

    <Window.Resources>
        <!-- Warm parchment and maroon palette -->
        <SolidColorBrush x:Key="MaroonBrush" Color="Maroon"/>
        <SolidColorBrush x:Key="AccentBrush" Color="IndianRed"/>
        <SolidColorBrush x:Key="ParchmentDark" Color="Bisque"/>
        <SolidColorBrush x:Key="DarkRedBrown" Color="#5C3229"/>
        <SolidColorBrush x:Key="LightRed" Color="#A45A4F"/>

        <!-- Header text styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bookman Old Style"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource MaroonBrush}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#77CC8F20" BlurRadius="10" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{StaticResource DarkRedBrown}"/>
        </Style>

        <!-- Arrow button style -->
        <Style x:Key="ArrowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MaroonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                Padding="6"
                                Width="48"
                                Height="56"
                                BorderBrush="{StaticResource DarkRedBrown}"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66000000" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Carousel item border style -->
        <Style x:Key="CarouselItemBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFDF6EC" Offset="0"/>
                        <GradientStop Color="#FFF3E4CE" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource LightRed}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#33000000" BlurRadius="10" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bookman Old Style"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource DarkRedBrown}"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- ListBox style adjustments -->
        <Style TargetType="ListBox" x:Key="CarouselListBoxStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!--main body-->
    <Grid Background="BurlyWood">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Welcome to The Queen's Gallery" Margin="6"/>
            <TextBlock Style="{StaticResource SubHeaderTextStyle}" Text="A short look at some influential women throughout history" Margin="2"/>
        </StackPanel>

        <!--Carousel Grid-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Arrow Button -->
            <Button Content="◀"
                    Grid.Column="0"
                    Style="{StaticResource ArrowButtonStyle}"
                    VerticalAlignment="Center"
                    Click="Previous_Click"
                    Margin="10"/>

            <!-- Carousel -->
            <ListBox x:Name="Carousel"
                     Grid.Column="1"
                     ItemsSource="{Binding VisiblePortraits}"
                     AlternationCount="7"
                     Style="{StaticResource CarouselListBoxStyle}"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <!--Styling my Carousel-->
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="Margin" Value="4"/>

                        <Style.Triggers>
                            <!-- Far Left -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Opacity" Value="0.35"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.6" ScaleY="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Middle Left -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.85" ScaleY="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Center -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="2">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Middle Right -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="3">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.85" ScaleY="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Far Right -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="4">
                                <Setter Property="Opacity" Value="0.35"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.6" ScaleY="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>


                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Padding="0"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="PortraitButton_Click"
                                Cursor="Hand">
                            <Border Style="{StaticResource CarouselItemBorderStyle}" Width="220" Height="270">
                                <StackPanel Orientation="Vertical">
                                    <Border Width="220" Height="220" CornerRadius="6" Background="{StaticResource ParchmentDark}">
                                        <Image Source="{Binding ImagePath}"
                                               Width="220"
                                               Height="220"
                                               Margin="4"
                                               Stretch="UniformToFill"
                                               ClipToBounds="True"/>
                                    </Border>
                                    <TextBlock Text="{Binding Title}"
                                               Style="{StaticResource TitleTextStyle}"
                                               Margin="6,8,6,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Right Arrow Button -->
            <Button Content="▶"
                    Grid.Column="2"
                    Style="{StaticResource ArrowButtonStyle}"
                    VerticalAlignment="Center"
                    Click="Next_Click"
                    Margin="10"/>
        </Grid>
        <!--End of Carousel-->
    </Grid> 
    <!--End of main-->
</Window>
