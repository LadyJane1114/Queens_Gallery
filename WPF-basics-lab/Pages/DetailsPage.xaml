<Page x:Class="Queens_Gallery.Pages.DetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Queens_Gallery.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1500"
      Title="${Binding Title}-Details">

    <Grid Background="BurlyWood">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        
        <Image x:Name="PortraitImage" Width="500" Height="500" Margin="10"/>
        
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock x:Name="TitleText" 
                       FontSize="34" 
                       FontFamily="Bookman Old Style" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource MaroonBrush}"
                       HorizontalAlignment="Center"
                       Margin="10"/>
            <TextBlock x:Name="SubtitleText" FontSize="18"
                       HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock x:Name="ActiveEraText" FontSize="18" Margin="5"/>
                <TextBlock Text="~ ~ ~" FontSize="18" Margin="5"/>
                <TextBlock x:Name="PrimaryLocation" FontSize="18" Margin="5"/>
            </StackPanel>
            
            <TextBlock x:Name="InfoBlurbText" FontSize="18" TextWrapping="Wrap" TextAlignment="Justify" Padding="30"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="MoreInfo" 
                        Content="Find Out More" 
                        Style="{StaticResource DetailsButtonStyle}" 
                        Margin="10"
                        Click="More_Info"/>
                <Button x:Name="BackToHome" 
                        Content="Back to Gallery" 
                        Style="{StaticResource DetailsButtonStyle}" 
                        Margin="10"
                        Click="Back_Home"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
