<Page x:Class="Queens_Gallery.Pages.PortraitsCarousel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Queens_Gallery.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1500"
      Title="The Queen's Gallery">

    <Grid Background="BurlyWood">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Welcome to The Queen's Gallery" Margin="6"/>
            <TextBlock Style="{StaticResource SubHeaderTextStyle}" Text="A short look at some influential women throughout history" Margin="2"/>
        </StackPanel>
        <!--Carousel Grid-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Arrow Button -->
            <Button Content="◀"
                    Grid.Column="0"
                    Style="{StaticResource ArrowButtonStyle}"
                    VerticalAlignment="Center"
                    Click="Previous_Click"
                    Margin="10"/>

            <!-- Carousel -->
            <ListBox x:Name="Carousel"
                     Grid.Column="1"
                     ItemsSource="{Binding VisiblePortraits}"
                     AlternationCount="7"
                     Style="{StaticResource CarouselListBoxStyle}"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <!--Styling my Carousel-->
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    <TranslateTransform X="0" Y="0"/>
                                </TransformGroup>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="Margin" Value="4"/>

                        <Style.Triggers>
                            <!-- Far Left -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Opacity" Value="0.35"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.6" ScaleY="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Middle Left -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.85" ScaleY="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Center -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="2">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Middle Right -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="3">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.85" ScaleY="0.85"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Far Right -->
                            <Trigger Property="ItemsControl.AlternationIndex" Value="4">
                                <Setter Property="Opacity" Value="0.35"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.6" ScaleY="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>


                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Padding="0"
                                BorderThickness="0"
                                Background="Transparent"
                                Click="PortraitButton_Click"
                                Cursor="Hand">
                            <Border Style="{StaticResource CarouselItemBorderStyle}" Width="220" Height="270">
                                <StackPanel Orientation="Vertical">
                                    <Border Width="220" Height="220" CornerRadius="6" Background="{StaticResource ParchmentDark}">
                                        <Image Source="{Binding ImagePath}"
                                               Width="220"
                                               Height="220"
                                               Margin="4"
                                               Stretch="UniformToFill"
                                               ClipToBounds="True"/>
                                    </Border>
                                    <TextBlock Text="{Binding Title}"
                                               Style="{StaticResource TitleTextStyle}"
                                               Margin="6,8,6,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Right Arrow Button -->
            <Button Content="▶"
                    Grid.Column="2"
                    Style="{StaticResource ArrowButtonStyle}"
                    VerticalAlignment="Center"
                    Click="Next_Click"
                    Margin="10"/>
        </Grid>
        <!--End of Carousel-->
    </Grid> <!--End of Main-->
</Page>


